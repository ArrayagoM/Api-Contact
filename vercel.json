{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*\\.(?:js|css|png|jpg|svg|ico))", "dest": "/public/$1" },

    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^/auth(?:\\.html)?$", "dest": "/public/auth.html" },
    { "src": "^/dashboard(?:\\.html)?$", "dest": "/public/views/dashboard.html" },

    { "src": "^/(api|form)(.*)$", "dest": "api/index.js" }
  ]
}
