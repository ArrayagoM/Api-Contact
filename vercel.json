{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*\\.(js|css|png|jpg|svg|ico))", "dest": "/public/$1" },

    { "src": "/", "dest": "/public/index.html" },
    { "src": "/", "dest": "/public/components/navbar.html" },
    { "src": "/", "dest": "/public/components/footer.html" },

    { "src": "/auth.html", "dest": "/public/views/auth.html" },
    { "src": "/dashboard.html", "dest": "/public/views/dashboard.html" },

    { "src": "^/api/(.*)$", "dest": "api/index.js" },
    { "src": "^/form/(.*)$", "dest": "api/index.js" }
  ]
}
